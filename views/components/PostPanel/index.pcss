.content {
  width: 100%;
  height: 100%;
  position: absolute;
  display: inline-block;
  padding: 47px 40px 0;
  color: #fff;
}

.time {
  font-size: 12px;
}

.title {
  font-size: 45px;
  line-height: 45px;
  margin: 0;
  padding: 0;
}

.excerpt {
  font-size: 15px;
  line-height: 15px;
  margin-top: 25px;
  opacity: .5;
  transition: all .3s;
}
