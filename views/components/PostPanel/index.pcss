@import "../../styleVar.pcss";

.panel {
  width: 100%;
  height: 100%;
  position: relative;
  cursor: pointer;
}

.color {
  background-color: dimgrey;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  transition: all 0.3s;
}

.expand {
  .color {
    transform: scaleX(1.14) translate3d(0, 0, 0);
  }
}

.shrink-left {
